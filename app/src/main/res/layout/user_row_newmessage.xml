<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                                   android:layout_width="match_parent"
                                                   android:layout_height="wrap_content"
                                                   xmlns:app="http://schemas.android.com/apk/res-auto"
>

    <TextView
            android:text="Username"
            android:textColor="@android:color/black"
            android:layout_width="0dp"
            android:layout_height="21dp"
            app:layout_constraintEnd_toEndOf="parent"
            android:id="@+id/username_newmessage" app:layout_constraintTop_toTopOf="@+id/imageView_newmessage"
            app:layout_constraintBottom_toBottomOf="@+id/imageView_newmessage"
            android:layout_marginTop="8dp"
            app:layout_constraintStart_toEndOf="@+id/imageView_newmessage" android:layout_marginStart="24dp"
            android:textSize="18sp"/>
    <de.hdodenhof.circleimageview.CircleImageView
            android:layout_width="50dp"
            android:layout_height="50dp" app:srcCompat="@android:drawable/btn_dialog"
            app:layout_constraintStart_toStartOf="parent"
            app:civ_border_width="2dp"
            android:layout_marginStart="16dp" android:id="@+id/imageView_newmessage" android:layout_marginTop="16dp"
            app:layout_constraintTop_toTopOf="parent" android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toBottomOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>